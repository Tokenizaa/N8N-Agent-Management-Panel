            "index": 0
          }
        ]
      ]
    },
    "Set: ID Cliente (Existente)": {
      "main": [
        [
          {
            "node": "Merge",
            "type": "main",
            "index": 0
          }
        ]
      ]
    },
    "Asaas: Criar Cliente": {
      "main": [
        [
          {
            "node": "Chatwoot: Atualizar ID Cliente",
            "type": "main",
            "index": 0
          }
        ]
      ]
    },
    "Chatwoot: Atualizar ID Cliente": {
      "main": [
        [
          {
            "node": "Set: ID Cliente (Novo)",
            "type": "main",
            "index": 0
          }
        ]
      ]
    },
    "Set: ID Cliente (Novo)": {
      "main": [
        [
          {
            "node": "Merge",
            "type": "main",
            "index": 1
          }
        ]
      ]
